
#define GAME_VERSION "v1.0.4"

function room_Load()
{
  StopAllAudio();
  
  DrawingSurface *ds = Room.GetDrawingSurfaceForBackground();
  ds.DrawingColor = 15;
  ds.DrawString(0, System.ViewportHeight - GetFontHeight(eFontFont1), eFontFont1, GAME_VERSION);
  ds.Release();
  
  DisplayGameMenu(eMenuStart);
}

function room_AfterFadeIn()
{
  aCar_Theft_101.Play();
}

function room_Leave()
{
  StopAllAudio();
}
